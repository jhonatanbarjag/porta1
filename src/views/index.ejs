    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: #f5f5f5;
        }

        .hero {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 50px;
            background: white;
        }

        .hero-content {
            max-width: 50%;
        }

        .hero h2 {
            color: #333;
            font-size: 2rem;
        }

        .hero h1 {
            font-size: 3rem;
            color: #000;
        }

        .highlight {
            color: #ff8c00;
        }

        .red-text {
            color: red;
            font-weight: bold;
        }

        .btn {
            display: inline-block;
            background: #4a00e0;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 20px;
            margin-top: 15px;
        }

        .social-icons {
            margin-top: 20px;
        }

        .social-icons a {
            text-decoration: none;
            margin-right: 10px;
            color: black;
            font-size: 1.5rem;
        }

        .hero-image img {
            width: 300px;
            border-radius: 50%;
            border: 5px solid white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        @media (max-width: 768px) {
            .hero {
                flex-direction: column;
                text-align: center;
            }

            .hero-content, .hero-image {
                max-width: 100%;
            }
        }
    </style>
</head>
